<project default="database-dump">

<path id="runtime-classpath">
  <fileset dir="/home/k/MyProgs/Ant">
    <include name="**/*.jar"/>

    <include name="**/*.zip"/>
  </fileset>
</path>
<target name="database-dump" description="Dumps the database structure">
  <taskdef name="databaseToDdl"
           classname="org.apache.ddlutils.task.DatabaseToDdlTask">
    <classpath refid="runtime-classpath"/>

  </taskdef>
  <databaseToDdl modelName="LanguageDB">
    <database url="jdbc:derby://localhost:1527//home/k/PRACE/Language/Data/LanguageDB"
              driverClassName="org.apache.derby.jdbc.EmbeddedDriver"
              username="k"
              password="k"/>

    <writeSchemaToFile outputFile="NEWschema.xml"/>
    <!--<writeDataToFile outputFile="NEWdata.xml"/>-->
  </databaseToDdl>

</target>
</project>